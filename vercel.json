{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "nodeVersion": "18.x",
        "installCommand": "npm install --legacy-peer-deps",
        "buildCommand": "npm run build",
        "includeFiles": ["build/**"] // Include build artifacts
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/build/static/$1",
      "headers": { "Cache-Control": "public, max-age=31536000, immutable" }
    },
    {
      "src": "/(.*)",
      "dest": "/build/server.js" // Route all requests to the server
    }
  ]
}